{
  "include": ["src", "./example.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2019", "DOM"],
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "allowJs": true
  }
}
