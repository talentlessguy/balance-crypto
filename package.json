{
  "name": "balance-crypto",
  "version": "0.2.7",
  "description": "Get wallet balance for 300+ cryptos with a unified interface",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "prepare": "npm run build",
    "build": "tsup src/index.ts --format esm --dts",
    "test": "node --loader ts-node/esm --experimental-specifier-resolution=node node_modules/uvu/bin.js",
    "test:coverage": "c8 --include=src pnpm test",
    "test:report": "c8 report --reporter=text-lcov > coverage.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talentlessguy/money-in-my-wallet.git"
  },
  "keywords": [
    "wallet",
    "balance",
    "crypto",
    "bitcoin",
    "ethereum",
    "btc",
    "litecoin",
    "chainlink",
    "dash"
  ],
  "author": "v1rtl <https://v1rtl.site>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentlessguy/money-in-my-wallet/issues"
  },
  "homepage": "https://github.com/talentlessguy/money-in-my-wallet#readme",
  "devDependencies": {
    "@tinyhttp/dotenv": "^1.3.0",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "c8": "^7.7.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "node-fetch": "^2.6.1",
    "ts-node": "^9.1.1",
    "tsup": "^4.11.0",
    "typescript": "^4.2.4",
    "uvu": "^0.5.1"
  },
  "dependencies": {
    "cbor-js": "^0.1.0",
    "crc": "^3.8.0",
    "erc20-balance": "^0.1.11"
  },
  "engines": {
    "node": ">=12.4"
  }
}
